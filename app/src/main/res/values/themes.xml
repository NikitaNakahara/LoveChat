<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoveChat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:colorPrimaryDark" tools:targetApi="l">@color/window_bg</item>
        <item name="android:textColor">@color/contrast_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:colorPrimaryDark" tools:targetApi="l">@color/window_bg</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>