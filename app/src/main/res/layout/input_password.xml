<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/app_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/beth_ellen"
                android:text="LoveChat"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:columnCount="4">

                <View
                    android:id="@+id/pwd_point_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/password_point" />

                <View
                    android:id="@+id/pwd_point_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/password_point" />

                <View
                    android:id="@+id/pwd_point_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/password_point" />

                <View
                    android:id="@+id/pwd_point_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/password_point" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4">

                <Button
                    android:id="@+id/pwd_btn_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/password_button"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_button"
                    android:text="2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/password_button"
                    android:text="3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/password_button"
                    android:text="4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_button"
                    android:text="5"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/password_button"
                    android:text="6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/password_button"
                    android:text="7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_button"
                    android:text="8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/password_button"
                    android:text="9"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_del"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/password_button"
                    android:text="X"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pwd_btn_0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_button"
                    android:text="0"
                    android:textSize="20sp" />
            </GridLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>