<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sync_data_flipper">
    <!-- SHOW QR -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/qr_image"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/confirm_button"
                android:text="сканировать"
                android:layout_marginEnd="40dp"
                android:id="@+id/scan_qr"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/confirm_button"
                android:text="ввод ID"
                android:id="@+id/show_input_id"/>
        </LinearLayout>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/info_text"
            android:textSize="17sp"
            android:paddingStart="5dp"
            android:textColor="@color/contrast_color"
            android:text="В случае невозможности сканирования обеими сторонами введите ID партнёра"/>
    </LinearLayout>

    <!-- INPUT ID -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ваш ID: "
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/user_id"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:hint="ID"
                android:layout_marginEnd="10dp"
                android:id="@+id/interlocutor_id_input"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/id_confirm_btn_icon"
                android:background="@drawable/confirm_btn"
                android:id="@+id/id_input_confirm_btn"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/confirm_button"
                android:text="сканировать"
                android:layout_marginEnd="40dp"
                android:id="@+id/input_id_scan_qr"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/confirm_button"
                android:text="показать QR"
                android:id="@+id/show_qr"/>
        </LinearLayout>
    </LinearLayout>
</ViewFlipper>