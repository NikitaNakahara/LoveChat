<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/qr_image"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <Button
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:background="@drawable/confirm_button"
            android:text="сканировать"
            android:layout_marginEnd="40dp"/>
        <Button
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:background="@drawable/confirm_button"
            android:text="ввод ID"/>
    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/info_text"
        android:textSize="17sp"
        android:paddingStart="5dp"
        android:textColor="@color/contrast_color"
        android:text="В случае невозможности сканирования обеими сторонами введите ID партнёра"/>
</LinearLayout>