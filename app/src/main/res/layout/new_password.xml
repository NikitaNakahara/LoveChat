<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Придумайте пароль"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="45dp"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:columnCount="4">

            <View
                android:id="@+id/npwd_point_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/password_point" />

            <View
                android:id="@+id/npwd_point_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/password_point" />

            <View
                android:id="@+id/npwd_point_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/password_point" />

            <View
                android:id="@+id/npwd_point_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/password_point" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:id="@+id/npwd_btn_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/password_button"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/password_button"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/password_button"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/password_button"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/password_button"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/password_button"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/password_button"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/password_button"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/password_button"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_del"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/password_button"
                android:text="X"
                android:textSize="20sp" />

            <Button
                android:id="@+id/npwd_btn_0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/password_button"
                android:text="0"
                android:textSize="20sp" />
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>